#!/bin/sh

alias adb="HOME=$XDG_DATA_HOME/android adb"
alias cat="bat --paging=never"
alias cd="z"
alias clear="reset"
alias cp="cp --preserve --recursive --verbose"
alias dd="dd status=progress"
alias df="duf"
alias diff="diff --color"
alias dm="yt-dlp --extract-audio --audio-format mp3 --audio-quality 0 --no-keep-video --embed-metadata -o '%(title)s.%(ext)s'"
alias du="dust --reverse"
alias exa="exa --long --group-directories-first --almost-all --icons"
alias eza="exa"
alias fd="fd --hidden --ignore-case --ignore-vcs"
alias ffmpeg="ffmpeg -hide_banner -loglevel quiet"
alias free="free -h"
alias fzf="fzf --layout=reverse --height 50%"
alias grep="grep --color"
alias ip="ip -color"
alias ka="killall"
alias ls="exa"
alias lsd="lsd --long --group-directories-first --almost-all"
alias mv="mv --verbose"
alias py="python"
alias rm="trash put"
alias rmdir="trash put"
alias te="trash empty --all --force"
alias tl="trash list"
alias tree="tree -a --gitignore -I .git"
alias trr="trash restore --force"
alias vi="nvim"
